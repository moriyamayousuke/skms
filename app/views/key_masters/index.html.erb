<h1>Key Masters</h1>

<table>
  <thead>
    <tr>
      <th>部屋名</th>
      <th>管理</th>
      <th>借りられている？</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @key_masters.each do |key_master| %>
      <tr>
        <td><%= key_master.room_name %></td>
        <td><%= key_master.management_room %></td>
        <td><%= rent(key_master.loan_details) %></td>
        <td><%= link_to 'Show', key_master %></td>
        <td><%= link_to 'Edit', edit_key_master_path(key_master) %></td>
        <td><%= button_to '削除', key_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

